@model List<WebApplication2.Models.Product>

<div id="inside">
    @for (var i = 0; i < Model.Count; i++)
    {
        if (i % 3 == 1)
        {
            <div class="item center">
                <img src="~/@Model[i].Image" width="213" height="192" /><br />
                <p><a href="@Url.Action("Detail","Product", new { id = Model[i].ProductID})">@Model[i].ProductName</a></p><span class="price">@Model[i].Price.ToString()</span><br />
            </div>
        }
        else
        {
            <div class="item">
                <img src="~/@Model[i].Image" width="213" height="192" /><br />
                <p><a href="@Url.Action("Detail","Product", new { id = Model[i].ProductID})">@Model[i].ProductName</a></p><span class="price">@Model[i].Price.ToString()</span><br />
            </div>
        }
    }
</div>
