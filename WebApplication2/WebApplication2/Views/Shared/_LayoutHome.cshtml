<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
          "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>Baby Shop</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" type="text/css" href="~/style.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">


    <script src="~/Scripts/jquery-3.4.1.js"></script>

    <!-- Custom styles for this template-->


</head>

<body>
    <div>
        <a href="@Url.Action("Index","Home")"><img src="~/images/logo.gif" width="237" height="123" class="float" alt="setalpm" /></a>

        <div class="topnav">
            <span><strong>Welcome</strong> &nbsp;<a href="@Url.Action("Login","User")">Log in</a> &nbsp; | &nbsp; <a href="@Url.Action("Register","User")">Register</a></span>
            <select>
                <option>Type of Product</option>
                <option>Clothing</option>
                <option>Accessories</option>
                <option>Clothing</option>
                <option>Accessories</option>
            </select>

            <!--<span>Language:</span> <a href="#"><img src="~/images/flag1.jpg" alt="" width="21" height="13" /></a> <a href="#"><img src="images/flag2.jpg" alt="" width="21" height="13" /></a> <a href="#"><img src="images/flag3.jpg" alt="" width="21" height="13" /></a> -->
            @if (Session["name"] != null)
            {
                <span style="background: lightblue; padding: 10px; color: black">Chào @Session["name"] <a href="@Url.Action("Logout","User")" style=" color:red">Đăng Xuất</a></span>
            }
            else
            {
                <span style="background: lightblue; padding: 10px; color: black"><a href="@Url.Action("Login","User")">Đăng Nhập</a></span>
            }

        </div>
        <ul id="menu">
            <li><a href="@Url.Action("Index","Home")"><img src="~/images/but1.gif" alt="" width="110" height="32" /></a></li>
            <li><a href="@Url.Action("Login","User")"><img src="~/images/but2.gif" alt="" width="110" height="32" /></a></li>
            <li><a href="@Url.Action("Register","User")"><img src="~/images/but3.gif" alt="" width="110" height="32" /></a></li>
            <li><a href="#"><img src="~/images/but4.gif" alt="" width="110" height="32" /></a></li>
            <li><a href="@Url.Action("Index","Cart")"><img src="~/images/but5.gif" alt="" width="110" height="32" /></a></li>
            <li><a href="#"><img src="~/images/but6.gif" alt="" width="110" height="32" /></a></li>
        </ul>
    </div>
    <div id="content">
        <div id="sidebar">
            <div id="navigation">
                <ul>
                    <li><a href="#">Home page</a></li>
                    <li><a href="#">New products</a></li>
                    <li><a href="#">All products</a></li>
                    <li><a href="#">Reviews</a></li>
                    <li><a href="#">F.A.Q.</a></li>
                    <li><a href="#">Contacts</a></li>
                </ul>
                <div id="cart">
                    <strong>Shopping cart:</strong> <br /> 0 items
                </div>
            </div>
            <div class="category-color">
                <img src="~/images/title1.gif" alt="" width="233" height="41" /><br />


                @Html.Action("LoadCategory", "Home")





                @RenderSection("Review", false)
            </div>
        </div>
        <div id="main">
            <img src="~/images/photo.jpg" alt="" width="682" height="334" border="0" usemap="#Map" />
            <br />
            @RenderBody()
        </div>
    </div>
    <div id="footer">
        <img src="~/images/cards.jpg" alt="" width="919" height="76" />
        <ul>
            <li><a href="@Url.Action("Index","Home")">Home page</a> |</li>
            <li><a href="#">New Products</a> |</li>
            <li><a href="#">All Products</a> |</li>
            <li><a href="#">Reviews</a> |</li>
            <li><a href="#">F.A.Q.</a> |</li>
            <li><a href="#">Contacts</a></li>
        </ul>

        <p>Copyright �. All rights reserved. Design by <a href="http://www.bestfreetemplates.info" title="Free CSS Templates" target="_blank" class="bft">BFT</a></p>
    </div>
    <map name="Map">
        <area shape="rect" coords="16,306,159,326" href="#">
    </map>

</body>
</html>


