@model WebApplication2.Models.LoginModel
@{
    ViewBag.Title = "Login";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <form>
                            <div class="form-group">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "UserName or Email", @autofocus = "autofocus" })


                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })

                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>

                        </form>}
                </div>
                <div class="card-footer text-center">
                    <div class="small"><a href="@Url.Action("Register","User")">Need an account? Sign up!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>